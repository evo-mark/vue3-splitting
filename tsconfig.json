{
  "include": ["src/index.ts"],
  "compilerOptions": {
    "rootDir": "src",
    "noEmitOnError": true,
    "target": "ESNext",
    "module": "ESNext",
    "types": ["node"],
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "preserveConstEnums": true,
    "removeComments": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
  }
}
